{
    "name": "freight-delay-notification",
    "version": "1.0.0",
    "description": "A freight delay notification service built with Express.js and TypeScript",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "keywords": [
        "express",
        "typescript",
        "freight",
        "notifications",
        "logistics"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "winston": "^3.10.0",
        "winston-daily-rotate-file": "^4.8.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/cors": "^2.8.13",
        "@types/compression": "^1.7.2",
        "@types/node": "^20.5.0",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "eslint": "^8.47.0",
        "jest": "^29.6.2",
        "@types/jest": "^29.5.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6",
        "ts-node-dev": "^2.0.0",
        "rimraf": "^5.0.1"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}
